@model AgriEnergyConnect.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="ProductID" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ProductionDate" class="form-label"></label>
                        <input asp-for="ProductionDate" type="date" class="form-control" />
                        <span asp-validation-for="ProductionDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FarmerID" class="form-label"></label>
                        <select asp-for="FarmerID" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Farmers, "FarmerID", "Name"))" disabled>
                        </select>
                        <span asp-validation-for="FarmerID" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Dashboard" class="btn btn-outline-secondary me-md-2">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <span id="submitText">Save Changes</span>
                        <span id="spinner" class="spinner-border spinner-border-sm d-none"></span>
                    </button>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <span id="submitText">Save</span>
                        <span class="spinner-border spinner-border-sm d-none" id="spinner"></span>
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}